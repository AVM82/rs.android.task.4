<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        app:defaultValue="name"
        app:entries="@array/order_entries"
        app:entryValues="@array/order_values"
        app:key="@string/KEY_PREF_ORDER"
        app:title="@string/order_title"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreferenceCompat
        app:key="@string/KEY_PREF_PROVIDER"
        app:defaultValue= "false"
        app:summary="@string/use_cursor_summary"
        app:title="Use cursor" />
</PreferenceScreen>