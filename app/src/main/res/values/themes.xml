<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rsandroidtask4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorFilterButton">@color/blue_700</item>
        <item name="toolbarTitleTextColor">@color/black</item>
    </style>

    <style name="AppModifyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/fill_color_modify_button</item>
        <item name="strokeColor">@color/stroke_color_modify_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/stroke_color_modify_button</item>
    </style>

    <style name="Theme.Rsandroidtask4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rsandroidtask4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rsandroidtask4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>